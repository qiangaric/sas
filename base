/* sas变量引用必须是双引号*/
%let town = Chicago;

data work.city;
	input city $ state $;
	datalines;
 Detroit MI
 Chicago IL
 ;
run;

data work.city2 ;
	set work.city;
	if  city = "&town";
run;

proc print data=work.city2;
run;


/* 数据导入 */
PROC IMPORT DATAFILE="c:\sas\ego.csv" OUT=jeeshim.egov DBMS=CSV REPLACE;
   GETNAMES=YES;
   DATAROW=2;
RUN;

/*  drop 列*/

  data scores;
    LENGTH name $10;
   input name s1 s2 s3;
   total = sum(s1,s2,s3);
drop s1 s2 s3;
datalines;
zhangsan 32 23 23
lisi 43 64 34

proc print;
run;
